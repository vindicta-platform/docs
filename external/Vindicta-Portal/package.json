{
    "name": "vindicta-portal",
    "version": "1.0.0",
    "description": "Static web portal for Vindicta Platform",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "serve": "firebase serve --only hosting",
        "deploy": "vite build && firebase deploy --only hosting",
        "test": "npm run test:unit && npm run test:e2e",
        "test:unit": "vitest run",
        "test:e2e": "npx playwright test",
        "test:headed": "npx playwright test --headed",
        "test:report": "npx playwright show-report",
        "test:a11y": "npx playwright test --grep @a11y",
        "test:visual": "npx playwright test --update-snapshots"
    },
    "keywords": [
        "vindicta",
        "warhammer",
        "portal"
    ],
    "license": "MIT",
    "devDependencies": {
        "@playwright/test": "^1.58.1",
        "@types/node": "^25.2.0",
        "axe-playwright": "^2.2.2",
        "jsdom": "^28.0.0",
        "vite": "^7.3.1",
        "vitest": "^4.0.18"
    },
    "dependencies": {
        "firebase": "^12.9.0"
    }
}
